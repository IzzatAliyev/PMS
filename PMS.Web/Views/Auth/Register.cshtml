@using PMS.Service.ViewModels.Auth
@using Microsoft.AspNetCore.Mvc.Localization
  
@model RegisterViewModel

@{
	ViewData["Title"] = "Register";
}

<div class="container">
	<h1>Register</h1>
	<form method="post">
		<div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show"></div>
		<div class="row justify-content-center">
			<div class="col-sm-6 col-lg-6">
				<div class="input-group mb-1">
					<input asp-for="Email" type="email" class="form-control" autocomplete="email"
						placeholder="Your email" />
					<div class="input-group-append">
						<div class="input-group-text">
							<span class="fas fa-user"></span>
						</div>
					</div>
				</div>
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6 col-lg-6">
				<div class="input-group mb-1 mt-3">
					<input asp-for="Password" class="form-control" id="password" autocomplete="password"
						placeholder="Password" />
					<div class="input-group-append">
						<div class="input-group-text">
							@* <span class="fas fa-lock" onclick='ShowPassword()'></span> *@
						</div>
					</div>
				</div>
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="col-sm-6 col-lg-6">
				<div class="input-group mb-1 mt-3">
					<input asp-for="ConfirmPassword" class="form-control" id="confirmPassword"
						autocomplete="confirmpassword" placeholder="Confirm password" />
					<div class="input-group-append">
						<div class="input-group-text">
							@* <span class="fas fa-lock" onclick='ShowPassword()'></span> *@
						</div>
					</div>
				</div>
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6 col-lg-6">
				<div class="input-group mb-1 mt-3">
					<input asp-for="FirstName" class="form-control" autocomplete="firstname" placeholder="Firstname" />
					<div class="input-group-append">
						<div class="input-group-text">
							<span class="fas fa-user"></span>
						</div>
					</div>
				</div>
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
			<div class="col-sm-6 col-lg-6">
				<div class="input-group mb-1 mt-3">
					<input asp-for="LastName" class="form-control" autocomplete="lastname" placeholder="Lastname" />
					<div class="input-group-append">
						<div class="input-group-text">
							<span class="fas fa-user"></span>
						</div>
					</div>
				</div>
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="col-4 offset-4 mt-2">
				<button type="submit" class="btn mt-3 text-center"
					style="background-color:#01ABC2">Register</button>
			</div>
		</div>
	</form>
