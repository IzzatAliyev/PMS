<div class="boardmenu">
    <div class="container">
        <h1>Task Form</h1>
        <form id="taskform">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" placeholder="Enter task name">

            <label for="description">Description:</label>
            <textarea id="description" name="description" placeholder="Enter task description"></textarea>

            <label for="task-type">Task Type:</label>
            <select id="task-type" name="task-type">
                <option value="feature">Feature</option>
                <option value="bug">Bug</option>
                <option value="enhancement">Enhancement</option>
            </select>

            <label for="assigned-to">Assigned To:</label>
            <input type="text" id="assigned-to" name="assigned-to" placeholder="Enter assignee name">

            <label for="assigned-from">Assigned From ID:</label>
            <input type="text" id="assigned-from" name="assigned-from" placeholder="Enter assigner ID">

            <label for="status">Status:</label>
            <select id="status" name="status">
                <option value="new">New</option>
                <option value="in-progress">In Progress</option>
                <option value="completed">Completed</option>
            </select>

            <input type="submit" value="Submit">
        </form>
    </div>
</div>

<style>
    /* Add your own styles here to customize the form's appearance */
    #taskform label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
    }

    #taskform input[type="text"],
    #taskform select {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        box-sizing: border-box;
        margin-bottom: 20px;
    }

    #taskform input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        float: right;
    }

    #taskform input[type="submit"]:hover {
        background-color: #45a049;
    }

    .container {
        margin: auto;
        display: grid;
        width: 50%;
        padding: 20px;
        background-color: var(--third-color);
        border-radius: 10px;
        box-shadow: 0 0 0 white;
    }
</style>