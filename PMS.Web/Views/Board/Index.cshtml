@{
	ViewData["Title"] = "Board";
}

<div class=boardmenu>
	@Html.Partial("_TopBarPartial")
	<div class=inprogressselection>
		<div class="rectangle_3">
			<div class=inprogresssel><span class="in_progress">In progress</span>
				<div class=inprogressadd>
					<span class="material-symbols-outlined">
						add
					</span>
				</div>
				<div class=inprogressmore>
					<span class="material-symbols-outlined">
						more_horiz
					</span>
				</div>
			</div>
		</div>
	</div>
	<div class=doneselection>
		<div class="rectangle_3">
			<div class=donesel><span class="done">Done</span>
				<div class=doneadd>
					<span class="material-symbols-outlined">
						add
					</span>
				</div>
				<div class=donemore>
					<span class="material-symbols-outlined">
						more_horiz
					</span>
				</div>
			</div>
		</div>

	</div>
	<div class=todoselection>
		<div class="rectangle_3">
			<span class="to_do">To do</span>
			<div class=todoadd>
				<span class="material-symbols-outlined">
					add
				</span>
			</div>
			<div class=todomore>
				<span class="material-symbols-outlined">
					more_horiz
				</span>
			</div>
			@{
				for (int i = 0; i < 10; i++)
				{
					@Html.Partial("_TilePartial")
				}
			}
		</div>
	</div>
</div>

