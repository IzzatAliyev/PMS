@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer


<div class=sidebar>
	<div class="rectangle_1"></div>
	<a class="projectname" asp-area="" asp-controller="Dashboard" asp-action="Index">
		<div class=projecticon>
			<span class="material-symbols-outlined">
				grain
			</span>
		</div><span class="projectnametext">PMS</span>
	</a>
	<a class="dashboard" asp-area="" asp-controller="Dashboard" asp-action="Index">
