@using Microsoft.AspNetCore.Identity
@using PMS.Infrastructure.Entities

@inject SignInManager<User> SignInManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PMS.Web.styles.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>

<body>
    <script>
        const notifconnection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationhub")
            .build();

        notifconnection.on("ReceiveNotification", function (message, sender) {
            console.log("Received notification from " + sender + ": " + message);
            $("#notification").html("<strong>" + sender + ":</strong> " + message);
            $("#notification").show();
            setTimeout(function () {
                $("#notification").hide();
            }, 5000);
        });

        notifconnection.start()
            .then(function () {
                console.log("Connected to NotificationHub.");
            })
            .catch(function (err) {
                console.error(err.toString());
            });
    </script>
    <div class="container-fluid">
        <div id="notification" class="alert alert-info" style="display:none;"></div>
        <main role="main">
            @{
                if (SignInManager.IsSignedIn(User))
                {
                    <div class=pms>
                        @Html.Partial("_SideBarPartial")
                        @RenderBody()
                    </div>
                }
                else
                {
                    @RenderBody()
                }
            }
        </main>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/preferences.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
