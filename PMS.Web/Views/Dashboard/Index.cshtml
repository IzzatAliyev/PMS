@{
	ViewData["Title"] = "Dashboard";
}

<div class=boardmenu>
	@Html.Partial("_TopBarPartial")
	<div class="container">
		<div class="employee">
			<h2>Employees</h2>
			<ul>
				<li>
					<div class="avatar" style="background-image: url('https://randomuser.me/api/portraits/men/11.jpg')">
					</div>
					<span>John Smith</span>
				</li>
				<li>
					<div class="avatar"
						style="background-image: url('https://randomuser.me/api/portraits/women/11.jpg')"></div>
					<span>Jane Doe</span>
				</li>
				<li>
					<div class="avatar" style="background-image: url('https://randomuser.me/api/portraits/men/22.jpg')">
					</div>
					<span>Mark Johnson</span>
				</li>
			</ul>
		</div>

		<div class="project">
			<h2>Projects</h2>
			<ul>
				<li>
					<span>Project A</span>
					<span class="status in-progress">In Progress</span>
				</li>
				<li>
					<span>Project B</span>
					<span class="status complete">Complete</span>
				</li>
				<li>
					<span>Project C</span>
					<span class="status delayed">Delayed</span>
				</li>
			</ul>
		</div>
	</div>
</div>

<style>
	body {
		font-family: Arial, sans-serif;
		background-color: #f2f2f2;
		margin: 0;
		padding: 0;
		display: flex;
		flex-wrap: wrap;
	}

	.header {
		background-color: #333;
		color: #fff;
		padding: 20px;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 999;
	}

	h1 {
		margin: 0;
		font-size: 24px;
		font-weight: normal;
	}

	.container {
		position: relative;
		display: flex;
		flex-wrap: wrap;
		max-width: 1200px;
		margin: 140px auto;
		padding: 20px;
		background-color: #fff;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		border-radius: 5px;
		overflow: hidden;
	}

	.employee {
		flex-basis: calc(50% - 10px);
		margin-right: 20px;
		margin-bottom: 20px;
		background-color: #fff;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		border-radius: 5px;
		padding: 20px;
		box-sizing: border-box;
	}

	.employee h2 {
		margin-top: 0;
		font-size: 20px;
		font-weight: normal;
		margin-bottom: 10px;
	}

	.employee ul {
		margin: 0;
		padding: 0;
		list-style: none;
	}

	.employee li {
		margin-bottom: 5px;
	}

	.employee .avatar {
		display: inline-block;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		margin-right: 10px;
		background-color: #ccc;
		background-position: center;
		background-size: cover;
	}

	.project {
		flex-basis: calc(50% - 10px);
		margin-bottom: 20px;
		background-color: #fff;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		border-radius: 5px;
		padding: 20px;
		box-sizing: border-box;
	}

	.project h2 {
		margin-top: 0;
		font-size: 20px;
		font-weight: normal;
		margin-bottom: 10px;
	}

	.project ul {
		margin: 0;
		padding: 0;
		list-style: none;
	}

	.project li {
		margin-bottom: 5px;
	}

	.project .status {
		display: inline-block;
		padding: 5px 10px;
		border-radius: 20px;
		font-size: 12px;
		font-weight: bold;
		text-transform: uppercase;
		margin-right: 10px;
		color: #fff;
	}

	.project .status.in-progress {
		background-color: #fbbd08;
	}

	.project .status.complete {
		background-color: #21ba45;
	}

	.project .status.delayed {
		background-color: #db2828;
	}
</style>
